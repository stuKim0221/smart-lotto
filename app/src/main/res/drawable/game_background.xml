<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색상 -->
    <solid android:color="@color/game_background_color" />

    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="@color/game_border_color" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="6dp" />

    <!-- 내부 여백 (선택사항) -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>
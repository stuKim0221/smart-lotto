<resources>
    <!-- 로또 번호 공 스타일 - 40대+ 사용자를 위한 확대 버전 -->
    <style name="LottoBall">
        <item name="android:layout_width">@dimen/lotto_ball_size</item>
        <item name="android:layout_height">@dimen/lotto_ball_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_lotto_ball</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textSize">@dimen/lotto_ball_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="LottoBall.Bonus">
        <item name="android:layout_width">@dimen/lotto_ball_size</item>
        <item name="android:layout_height">@dimen/lotto_ball_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_lotto_ball_bonus</item>
        <item name="android:textColor">@color/md_theme_light_onSurface</item>
        <item name="android:textSize">@dimen/lotto_ball_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>

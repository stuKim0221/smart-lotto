<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/home_container_padding">

    <!-- 지난 회차 로또 번호 카드 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLastDraw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/home_card_margin_bottom"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:strokeWidth="@dimen/button_stroke_width"
        app:strokeColor="@color/button_stroke_focused"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/standard_padding">

            <!-- 제목 + 로딩 인디케이터 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLastDrawTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="지난 회차"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressLast"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="gone"
                    app:indicatorInset="0dp"
                    app:indicatorSize="20dp" />
            </LinearLayout>

            <!-- 번호 영역 (수정된 부분) -->
            <LinearLayout
                android:id="@+id/rowBalls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <!-- 본번호 6개를 담는 컨테이너 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lastNum1"
                        style="@style/LottoBall"
                        android:layout_width="@dimen/lotto_ball_size"
                        android:layout_height="@dimen/lotto_ball_size"
                        android:layout_marginEnd="3dp"
                        android:text="1" />

                    <TextView
                        android:id="@+id/lastNum2"
                        style="@style/LottoBall"
                        android:layout_width="@dimen/lotto_ball_size"
                        android:layout_height="@dimen/lotto_ball_size"
                        android:layout_marginEnd="3dp"
                        android:text="2" />

                    <TextView
                        android:id="@+id/lastNum3"
                        style="@style/LottoBall"
                        android:layout_width="@dimen/lotto_ball_size"
                        android:layout_height="@dimen/lotto_ball_size"
                        android:layout_marginEnd="3dp"
                        android:text="3" />

                    <TextView
                        android:id="@+id/lastNum4"
                        style="@style/LottoBall"
                        android:layout_width="@dimen/lotto_ball_size"
                        android:layout_height="@dimen/lotto_ball_size"
                        android:layout_marginEnd="3dp"
                        android:text="4" />

                    <TextView
                        android:id="@+id/lastNum5"
                        style="@style/LottoBall"
                        android:layout_width="@dimen/lotto_ball_size"
                        android:layout_height="@dimen/lotto_ball_size"
                        android:layout_marginEnd="3dp"
                        android:text="5" />

                    <TextView
                        android:id="@+id/lastNum6"
                        style="@style/LottoBall"
                        android:layout_width="@dimen/lotto_ball_size"
                        android:layout_height="@dimen/lotto_ball_size"
                        android:layout_marginEnd="6dp"
                        android:text="6" />

                </LinearLayout>

                <!-- + 기호 -->
                <TextView
                    android:id="@+id/lastPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="18sp" />

                <!-- 보너스 번호 -->
                <TextView
                    android:id="@+id/lastBonusNum"
                    style="@style/LottoBall.Bonus"
                    android:layout_width="@dimen/lotto_ball_size"
                    android:layout_height="@dimen/lotto_ball_size"
                    android:text="7" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 자동/수동/AI 큰 버튼 카드들 (토끼귀 배치) -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardLastDraw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 첫 번째 행: 자동 + 수동 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/home_card_margin_bottom">

            <!-- QR 당첨 확인 버튼 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQrCheck"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/home_button_margin"
                app:cardCornerRadius="@dimen/button_corner_radius"
                app:cardElevation="4dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/button_stroke_focused"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/home_button_padding">

                    <!-- 아이콘 영역 -->
                    <ImageView
                        android:layout_width="@dimen/home_button_image_size"
                        android:layout_height="@dimen/home_button_image_size"
                        android:src="@drawable/ic_qrscan"
                        android:padding="20dp"
                        android:scaleType="centerInside"
                        android:contentDescription="QR 당첨 확인"/>

                    <!-- 라벨 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="QR 당첨확인"
                        android:textSize="@dimen/home_button_text_size"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 수동 버튼 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardManual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/home_button_margin"
                app:cardCornerRadius="@dimen/button_corner_radius"
                app:cardElevation="4dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/button_stroke_focused"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/home_button_padding">

                    <!-- 아이콘 영역 (이미지 크기 확대) -->
                    <ImageView
                        android:layout_width="@dimen/home_button_image_size"
                        android:layout_height="@dimen/home_button_image_size"
                        android:src="@drawable/ic_manual_touch"
                        android:padding="20dp"
                        android:scaleType="centerInside"
                        android:contentDescription="수동 선택"/>

                    <!-- 라벨 (기존 스타일 유지) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="수동"
                        android:textSize="@dimen/home_button_text_size"
                        android:textStyle="bold"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- 두 번째 행: AI 기반 번호 생성 (가로로 넓게) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/home_card_margin_bottom">

            <!-- AI 기반 번호 생성 버튼 (가로로 넓게) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/home_ai_button_margin"
                android:layout_marginEnd="@dimen/home_ai_button_margin"
                app:cardCornerRadius="@dimen/button_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeWidth="3dp"
                app:strokeColor="@color/button_stroke_focused"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/home_ai_button_padding">

                    <!-- 아이콘 영역 (이미지 크기 확대) -->
                    <ImageView
                        android:layout_width="@dimen/home_ai_button_image_size"
                        android:layout_height="@dimen/home_ai_button_image_size"
                        android:src="@drawable/ic_ai_brain"
                        android:padding="1dp"
                        android:scaleType="centerInside"
                        android:contentDescription="AI 아이콘"
                        android:layout_marginEnd="16dp"/>

                    <!-- 텍스트 영역 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI 기반 번호 생성"
                            android:textSize="@dimen/home_ai_button_title_size"
                            android:textStyle="bold"
                            android:textColor="?attr/colorPrimary"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="과거 당첨 데이터를 분석해서 추천"
                            android:textSize="@dimen/home_ai_button_subtitle_size"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>

                    <!-- 화살표 아이콘 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="›"
                        android:textSize="32sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- 중요 안내사항 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@android:color/holo_orange_light"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFF8E1">

                <!-- 제목 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚠️"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="중요 안내사항"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_orange_dark"/>
                </LinearLayout>

                <!-- 안내 내용 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 본 앱은 번호 생성 도구로, 실제 로또 구매 서비스가 아닙니다\n• 해당앱의 이력만으로는 당첨금을 수령할 수 없습니다\n• 앱에서 생성된 번호는 참고용이며 당첨을 보장하지 않습니다"
                    android:textSize="10sp"
                    android:lineHeight="18sp"
                    android:textColor="@android:color/black"
                    android:alpha="0.8"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
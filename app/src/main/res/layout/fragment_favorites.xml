                            android:layout_height="80dp"
                            android:background="?attr/colorOutline" />

                        <!-- 보너스 짝수 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvBonusEvenCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorSecondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="짝수"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvBonusEvenPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="14sp"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 구간별 분석 카드 (메인 번호만) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📊 구간별 출현 분석 - 메인번호만"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <!-- 구간별 통계 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 1-10 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="1-10"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressSection1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvSection1"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- 11-20 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="11-20"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressSection2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvSection2"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- 21-30 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="21-30"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressSection3"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvSection3"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- 31-40 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="31-40"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressSection4"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvSection4"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- 41-45 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="41-45"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressSection5"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvSection5"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 보너스 구간별 분석 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎯 보너스 번호 구간별 출현 분석"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorTertiary"
                        android:layout_marginBottom="12dp" />

                    <!-- 보너스 구간별 통계 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 1-10 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="1-10"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressBonusSection1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvBonusSection1"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- 11-20 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="11-20"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressBonusSection2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvBonusSection2"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- 21-30 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="21-30"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressBonusSection3"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvBonusSection3"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- 31-40 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="31-40"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressBonusSection4"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvBonusSection4"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- 41-45 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="41-45"
                                android:textSize="14sp" />

                            <ProgressBar
                                android:id="@+id/progressBonusSection5"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:max="100" />

                            <TextView
                                android:id="@+id/tvBonusSection5"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textSize="12sp"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 보너스 번호 통계 요약 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📋 보너스 번호 통계 요약"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorTertiary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvBonusStats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="가장 많이 나온 보너스: 7번 (15회)\n가장 적게 나온 보너스: 45번 (3회)"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- 로딩 인디케이터 -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
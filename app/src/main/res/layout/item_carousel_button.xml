<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="@dimen/card_corner_radius_large"
    app:cardElevation="@dimen/card_elevation_medium"
    app:strokeWidth="@dimen/button_stroke_width"
    app:strokeColor="?attr/colorOutline"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/large_padding">

        <!-- 아이콘 -->
        <ImageView
            android:id="@+id/ivCarouselIcon"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:padding="24dp"
            android:scaleType="centerInside"
            android:contentDescription="버튼 아이콘"/>

        <!-- 제목 -->
        <TextView
            android:id="@+id/tvCarouselTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="제목"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"/>

        <!-- 설명 -->
        <TextView
            android:id="@+id/tvCarouselDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="설명"
            android:textSize="@dimen/text_body_large"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:alpha="0.87"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

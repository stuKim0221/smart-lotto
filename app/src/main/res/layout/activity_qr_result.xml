<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <!-- 상단 안전 영역 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

    <!-- 하단 안전 영역 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp" />

    <!-- 상단 앱바 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:title="QR 당첨 확인"
        app:titleTextColor="?attr/colorOnSurface"
        app:navigationIcon="@drawable/ic_close"
        app:navigationIconTint="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="@id/guideline_top_safe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 스크롤 가능한 메인 콘텐츠 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/standard_padding"
        android:paddingBottom="@dimen/standard_padding"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom_safe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- 스캔된 번호 정보 (컴팩트) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📱 스캔된 번호 정보"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:padding="@dimen/standard_padding"
                android:gravity="center" />

            <!-- 5게임 컨테이너 (여백 최소화) -->
            <LinearLayout
                android:id="@+id/llGamesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/small_padding" />

            <!-- 당첨 결과 카드 (동적으로 표시) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWinResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/large_padding"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="?attr/colorSecondaryContainer"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/large_padding">

                    <!-- 당첨 헤더 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_ai_brain"
                            app:tint="?attr/colorOnSecondaryContainer"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="당첨 결과" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🎉 당첨 결과"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSecondaryContainer" />

                    </LinearLayout>

                    <!-- 당첨 내역 텍스트 -->
                    <TextView
                        android:id="@+id/tvWinResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="당첨 결과가 여기에 표시됩니다"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 액션 버튼들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/standard_padding">

                <!-- 다시 스캔 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanAgain"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="다시 스캔"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_qr_code"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

                <!-- 히스토리 저장 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveToHistory"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="저장하기"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_database"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

            </LinearLayout>

            <!-- 하단 안내 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_padding"
                app:cardCornerRadius="@dimen/small_padding"
                app:cardElevation="0dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:strokeWidth="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="💡 이 결과는 참고용이며, 실제 당첨 확인은 공식 사이트에서 해주세요"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
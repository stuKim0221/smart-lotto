<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 상단 안전 영역 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

    <!-- 하단 안전 영역 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="0dp" />

    <!-- 카메라 프리뷰 (전체 화면) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- QR 스캔 가이드 오버레이 (안전 영역 내) -->
    <app.grapekim.smartlotto.ui.qr.QrScanOverlayView
        android:id="@+id/scanOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline_top_safe"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_safe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 피드백용 오버레이 -->
    <View
        android:id="@+id/overlayView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 상단 안내 (안전 영역 내) -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="QR 코드 스캔"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="#66000000"
        android:textColor="@android:color/white"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="@id/guideline_top_safe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 닫기 버튼 (안전 영역 내) -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="닫기"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="@id/guideline_top_safe"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 로딩 표시 (중앙 배치) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        android:indeterminateTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단 가이드 (안전 영역 위) -->
    <TextView
        android:id="@+id/tvGuide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="QR 코드를 가이드라인 안에 맞춰주세요"
        android:textSize="14sp"
        android:background="#66000000"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_safe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>